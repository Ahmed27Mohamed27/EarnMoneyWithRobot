<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#271437"
    tools:context=".InviteActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:background="#271437">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coinsTv"
                android:drawableEnd="@drawable/baseline_paid_24"
                android:minWidth="90dp"
                android:gravity="center"
                android:background="@drawable/coin_bg"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="0"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gift"
        android:layout_below="@id/toolbar"
        android:layout_margin="32dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/referCodeTv"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:padding="6dp"
        android:text="كود الدعوة الخاص بيك"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minWidth="160dp"
        android:minHeight="35dp"
        android:padding="12dp"
        android:gravity="center"
        android:fontFamily="@font/goblin_one"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:id="@+id/referCodeTv"
        android:background="@drawable/refer_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/referCodeTv"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="17sp"
        android:text="انقر لمشاركة الرمز مع أصدقائك وكسب المزيد من العملات المعدنية. أدخل رمز إحالة أصدقائك واكسب 5 قطعة نقدية على الفور"
        android:textColor="@android:color/darker_gray"
        app:drawableEndCompat="@drawable/baseline_paid_24"
        app:drawableStartCompat="@drawable/baseline_paid_24" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="كود الدعوة"
        android:textAllCaps="false"
        android:background="@drawable/btn"
        android:backgroundTint="#FD0000"
        android:textStyle="bold"
        android:id="@+id/redeemBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30sp"
        android:textColor="@android:color/white" />





</RelativeLayout>